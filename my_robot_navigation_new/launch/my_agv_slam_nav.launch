<?xml version="1.0"?>
<launch>
    <arg name="model" default="my_new_robot"/>
    <arg name="x_pos" default="0.0"/>
    <arg name="y_pos" default="0.0"/>
    <arg name="z_pos" default="0.0"/>

    <arg name="use_gazebo" default="true"/>
    <arg name="rvizconfig" default="$(find my_new_robot)/my_robot_navigation_new/rviz/navigation.rviz"/> 
    <!-- <arg name="world_name" default="room1"/> -->
    <!-- <arg name="map_name" default="room1_1-3"/> -->
    <arg name="use_amcl" default="true"/>
    <!-- <arg name="map_file" default="$(find my_new_robot)/my_robot_slam_new/maps/$(arg map_name).yaml" if="$(arg use_amcl)"/> -->
    
    <include file="$(find my_new_robot)/my_robot_gazebo/launch/robot_gazebo.launch" if="$(arg use_gazebo)">
        <!-- <arg name="world_name" value="$(find my_new_robot)/my_robot_gazebo/worlds/room1.world"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/> -->
    </include>

    <include file="$(find my_new_robot)/my_robot_description/launch/urdf.launch">
        <arg name="rvizconfig" value="$(arg rvizconfig)"/>
    </include>

    <!-- <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher">
        <param name="rate" value="50"/>
    </node>
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
        <param name="publish_frequency" value="50"/>
    </node> -->

    <!-- <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model my_new_robot -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" /> -->

        <group if="$(arg use_amcl)">
            <!-- <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/> -->
            
            <include file="$(find my_new_robot)/my_robot_navigation_new/launch/amcl_new.launch"/>
        </group>

        
        <include file="$(find my_new_robot)/my_robot_navigation_new/launch/move_base_new.launch"/>

    <node pkg="slam_karto" type="slam_karto" name="slam_karto" output="screen">
        <rosparam command="load" file="$(find my_new_robot)/my_robot_slam_new/config/karto_mapper_params.yaml"/>
    </node>
</launch>

